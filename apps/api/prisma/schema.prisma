generator client {
  provider     = "prisma-client"
  moduleFormat = "cjs"
  output       = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Foo {
  id   Int    @id @default(autoincrement())
  name String
}

enum Role {
  USER
  ADMIN
  MOD
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  BANNED
  DELETED
}

enum ResourceType {
  POST
  VIDEO
  ARTICLE
  COMMENT
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
}

enum SubscriptionTier {
  FREE
  BASIC
  PRO
}

enum ProductStatus {
  ACTIVE
  REFUNDED
}

enum PaymentMethod {
  MONEY
  CREDITS
}

enum CreditTransactionType {
  PURCHASE
  SPEND
  REFUND
  ADMIN_ADJUST
}

model User {
  id                      Int                      @id @default(autoincrement())
  username                String                   @unique
  avatarPath              String?
  email                   String?                  @unique
  password                String? // auto-generated for OAuth users, user-set for email/password auth
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  refreshToken            String?
  role                    Role                     @default(USER)
  sessions                Session[]
  passwordResetTokens     PasswordResetToken[]
  posts                   Post[]
  likes                   Like[]
  comments                Comment[]
  usernameHistory         UsernameHistory[]
  collections             Collection[]
  // OAuth identity fields
  googleId                String?                  @unique
  githubId                String?                  @unique
  // Email section
  tempEmail               String? // Temporary email awaiting verification
  emailVerifiedAt         DateTime?
  isEmailVerified         Boolean                  @default(false)
  emailVerificationTokens EmailVerificationToken[]
  // Account status
  status                  UserStatus               @default(ACTIVE)
  statusExpireAt          DateTime? // When suspension/ban expires
  statusReason            String? // Why they were suspended/banned/deleted
  // Legacy soft delete (kept for backward compatibility)
  deleted                 Boolean                  @default(false)
  deletedAt               DateTime?
  auditLogs               AuditLog[]               @relation("AdminActor")
  targetedAuditLogs       AuditLog[]               @relation("AuditTarget")
  // Stripe integration
  stripeCustomerId        String?                  @unique
  subscription            Subscription?
  purchases               ProductPurchase[]
  creditPurchases         CreditPurchase[]
  creditTransactions      CreditTransaction[]
  // Credits balance
  credits                 Int                      @default(0)
}

model Session {
  id               String   @id @default(uuid())
  userId           Int
  refreshTokenHash String?
  userAgent        String?
  ipAddress        String?
  isValid          Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  lastUsedAt       DateTime @default(now())
  expiresAt        DateTime @default(dbgenerated("NOW() + interval '30 days'")) // Session expires after 30 days

  // Geolocation fields
  location  String? // e.g., "San Francisco, CA"
  country   String? // ISO country code
  latitude  Float?
  longitude Float?

  // Risk scoring fields
  riskScore     Int     @default(0) // 0-100 risk level
  isNewLocation Boolean @default(false) // True if login from new location
  isNewDevice   Boolean @default(false) // True if new device fingerprint

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt]) // Index for cleanup queries
}

model EmailVerificationToken {
  id        String    @id @default(uuid())
  userId    Int
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model PasswordResetToken {
  id        String    @id @default(uuid())
  userId    Int
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model UsernameHistory {
  id       Int      @id @default(autoincrement())
  userId   Int
  username String // The username that was freed up
  freedAt  DateTime @default(now()) // When the username became available
  reason   String? // Why (e.g., "account_deletion", "username_change")
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([username])
}

model AuditLog {
  id          Int     @id @default(autoincrement())
  adminId     Int
  action      String // "USER_CREATED", "USER_BANNED", "POST_DELETED", etc
  resource    String // "USER", "POST", "CONTENT", "ADMIN", "SETTINGS"
  resourceId  String? // ID of affected resource
  targetId    Int? // ID of target user (if different from resourceId)
  description String? // Human-readable action description
  changes     Json? // Before/after values for updates
  ipAddress   String? // Admin's IP when action performed

  createdAt DateTime @default(now())

  admin  User  @relation("AdminActor", fields: [adminId], references: [id], onDelete: Cascade)
  target User? @relation("AuditTarget", fields: [targetId], references: [id], onDelete: SetNull)

  @@index([adminId])
  @@index([targetId])
  @@index([resource])
  @@index([createdAt])
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  creatorId Int
  creator   User      @relation(fields: [creatorId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deleted   Boolean   @default(false)
  deletedAt DateTime?
  viewCount Int       @default(0)
  likeCount Int       @default(0)
}

model Setting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}

model Like {
  id           Int          @id @default(autoincrement())
  userId       Int
  resourceType ResourceType
  resourceId   Int
  createdAt    DateTime     @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, resourceType, resourceId])
  @@index([resourceType])
  @@index([userId])
  @@index([resourceId])
}

model Collection {
  id          Int              @id @default(autoincrement())
  creatorId   Int
  name        String // e.g., "favorites", "read later", "to review"
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  deleted     Boolean          @default(false)
  deletedAt   DateTime?
  items       CollectionItem[]
  creator     User             @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@unique([creatorId, name]) // Each user can't have duplicate collection names
  @@index([creatorId])
  @@index([deleted])
}

model CollectionItem {
  id           Int          @id @default(autoincrement())
  collectionId Int
  resourceType ResourceType
  resourceId   Int
  addedAt      DateTime     @default(now())
  deleted      Boolean      @default(false)
  deletedAt    DateTime?

  collection Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)

  @@unique([collectionId, resourceType, resourceId]) // Prevent duplicate items in same collection
  @@index([collectionId])
  @@index([resourceType])
  @@index([resourceId])
  @@index([deleted])
}

model Comment {
  id           Int          @id @default(autoincrement())
  userId       Int
  resourceType ResourceType
  resourceId   Int
  content      String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  deleted      Boolean      @default(false)
  deletedAt    DateTime?
  likeCount    Int          @default(0)

  creator User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([resourceType])
  @@index([resourceId])
  @@index([deleted])
}

// Subscription model
model Subscription {
  id       Int    @id @default(autoincrement())
  userId   Int    @unique // One subscription per user
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeId String @unique

  // Status
  status   SubscriptionStatus // active, canceled, past_due, trialing
  tier     SubscriptionTier // basic, pro (derived from stripePriceId)
  nextTier SubscriptionTier?

  // Billing period
  periodStart DateTime
  periodEnd   DateTime

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

// Product model - single creator can create and sell products
model Product {
  id          String  @id @default(uuid())
  slug        String  @unique
  title       String
  description String?
  type        String // course, ebook, cheatsheet, etc.

  // Pricing - flexible (supports money, credits, or both)
  priceInCents   Int? // Price in USD cents (optional)
  priceInCredits Int? // Price in credits (optional)

  // Subscription requirement
  requiresSubscription Boolean           @default(false)
  requiredTier         SubscriptionTier?

  // Content
  contentMarkdown String // Raw markdown content with frontmatter

  // Publishing
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  purchases ProductPurchase[]

  @@index([slug])
  @@index([published])
  @@index([createdAt])
}

// One-time product purchases (courses, ebooks, videos, etc.)
// One purchase per user per product (one-time only)
model ProductPurchase {
  id        Int     @id @default(autoincrement())
  userId    Int
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  stripeId  String  @unique

  paymentMethod PaymentMethod
  status        ProductStatus @default(ACTIVE)
  refundedAt    DateTime?
  purchasedAt   DateTime      @default(now())

  @@unique([userId, productId]) // One purchase per user per product
  @@index([userId])
  @@index([productId])
  @@index([paymentMethod])
}

// Credit/gem purchases
model CreditPurchase {
  id       Int    @id @default(autoincrement())
  userId   Int
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeId String @unique

  amount    Int // How many credits bought
  pricePaid Int // Amount paid in cents
  currency  String @default("usd")

  purchasedAt DateTime @default(now())

  @@index([userId])
}

// Credit transaction audit trail
model CreditTransaction {
  id       Int     @id @default(autoincrement())
  userId   Int
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeId String?

  type          CreditTransactionType // PURCHASE, SPEND, REFUND, ADMIN_ADJUST
  amount        Int // Amount changed
  reason        String? // e.g., "article_unlock", "course_purchase"
  balanceBefore Int // Balance before transaction
  balanceAfter  Int // Balance after transaction

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}
