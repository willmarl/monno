generator client {
  provider     = "prisma-client"
  moduleFormat = "cjs"
  output       = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Foo {
  id   Int    @id @default(autoincrement())
  name String
}

enum Role {
  USER
  ADMIN
  MOD
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  BANNED
  DELETED
}

model User {
  id                      Int                      @id @default(autoincrement())
  username                String                   @unique
  avatarPath              String?
  email                   String?                  @unique
  password                String? // auto-generated for OAuth users, user-set for email/password auth
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  refreshToken            String?
  role                    Role                     @default(USER)
  sessions                Session[]
  passwordResetTokens     PasswordResetToken[]
  posts                   Post[]
  likes                   Like[]
  usernameHistory         UsernameHistory[]
  // OAuth identity fields
  googleId                String?                  @unique
  githubId                String?                  @unique
  // Email section
  tempEmail               String? // Temporary email awaiting verification
  emailVerifiedAt         DateTime?
  isEmailVerified         Boolean                  @default(false)
  emailVerificationTokens EmailVerificationToken[]
  // Account status
  status                  UserStatus               @default(ACTIVE)
  statusExpireAt          DateTime? // When suspension/ban expires
  statusReason            String? // Why they were suspended/banned/deleted
  // Legacy soft delete (kept for backward compatibility)
  deleted                 Boolean                  @default(false)
  deletedAt               DateTime?
  auditLogs               AuditLog[]               @relation("AdminActor")
  targetedAuditLogs       AuditLog[]               @relation("AuditTarget")
}

model Session {
  id               String   @id @default(uuid())
  userId           Int
  refreshTokenHash String?
  userAgent        String?
  ipAddress        String?
  isValid          Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  lastUsedAt       DateTime @default(now())
  expiresAt        DateTime @default(dbgenerated("NOW() + interval '30 days'")) // Session expires after 30 days

  // Geolocation fields
  location  String? // e.g., "San Francisco, CA"
  country   String? // ISO country code
  latitude  Float?
  longitude Float?

  // Risk scoring fields
  riskScore     Int     @default(0) // 0-100 risk level
  isNewLocation Boolean @default(false) // True if login from new location
  isNewDevice   Boolean @default(false) // True if new device fingerprint

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt]) // Index for cleanup queries
}

model EmailVerificationToken {
  id        String    @id @default(uuid())
  userId    Int
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model PasswordResetToken {
  id        String    @id @default(uuid())
  userId    Int
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model UsernameHistory {
  id       Int      @id @default(autoincrement())
  userId   Int
  username String // The username that was freed up
  freedAt  DateTime @default(now()) // When the username became available
  reason   String? // Why (e.g., "account_deletion", "username_change")
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([username])
}

model AuditLog {
  id          Int     @id @default(autoincrement())
  adminId     Int
  action      String // "USER_CREATED", "USER_BANNED", "POST_DELETED", etc
  resource    String // "USER", "POST", "CONTENT", "ADMIN", "SETTINGS"
  resourceId  String? // ID of affected resource
  targetId    Int? // ID of target user (if different from resourceId)
  description String? // Human-readable action description
  changes     Json? // Before/after values for updates
  ipAddress   String? // Admin's IP when action performed

  createdAt DateTime @default(now())

  admin  User  @relation("AdminActor", fields: [adminId], references: [id], onDelete: Cascade)
  target User? @relation("AuditTarget", fields: [targetId], references: [id], onDelete: SetNull)

  @@index([adminId])
  @@index([targetId])
  @@index([resource])
  @@index([createdAt])
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  creatorId Int
  creator   User      @relation(fields: [creatorId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deleted   Boolean   @default(false)
  deletedAt DateTime?
  likes     Like[]
}

model Setting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}

model Like {
  id     Int @id @default(autoincrement())
  userId Int
  postId Int

  user User @relation(fields: [userId], references: [id])
  post Post @relation(fields: [postId], references: [id])

  @@unique([userId, postId])
}
